{
  "name": "black-business-directory",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:dev": "NODE_ENV=development tsc && vite build",
    "build:prod": "NODE_ENV=production tsc && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy:dev": "npm run build:dev && netlify deploy --dir=dist",
    "deploy:prod": "npm run build:prod && netlify deploy --prod --dir=dist",
    "migrate-images": "node scripts/migrate-images.js",
    "analyze": "vite build --mode analyze",
    "bundle-report": "npm run build && npx vite-bundle-analyzer dist"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@stripe/stripe-js": "^7.5.0",
    "@supabase/supabase-js": "^2.39.7",
    "@types/react-router-dom": "^5.3.3",
    "lodash": "^4.17.21",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-markdown": "^9.0.1",
    "react-phone-number-input": "^3.4.12",
    "react-router-dom": "^6.30.1",
    "react-select": "^5.8.0",
    "rehype-raw": "^7.0.0",
    "yet-another-react-lightbox": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/lodash": "^4.14.202",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "file-type": "^19.0.0",
    "globals": "^15.9.0",
    "netlify-cli": "^17.0.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}
